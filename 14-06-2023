class Solution {
  public:
    long long maxDiamonds(int A[], int N, int K) {
        // code here
        long long ans = 0;
        priority_queue<int> pq;
        for(int i=0;i<N;i++)
        {
            pq.push(A[i]);
        }
        while(K--)
        {
            int x = pq.top();
            pq.pop();
            ans+=x;
            pq.push(x/2);
        }
        return ans;
    }
};
